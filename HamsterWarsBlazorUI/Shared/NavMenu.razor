@using HamsterWarsBlazorUI.Pages

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Hamster Wars</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hamsterlist">
                <span class="oi oi-list"></span> Hamster List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="battle">
                <span class="oi oi-puzzle-piece"></span> Battle
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hamstergrid">
                <span class="oi oi-grid-three-up"></span> Gallery
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="create">
                <span class="oi oi-plus"></span> Create Hamster
            </NavLink>
        </div>
    </nav>
</div>

@code {

    private bool collapseNavMenu = true;
    
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
